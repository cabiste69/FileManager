<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FileManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FileManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="FileManager">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid ColumnDefinitions="2*,8*" Name="g" Background="#50000000" ShowGridLines="True">
		<Grid Grid.Column="1" RowDefinitions="2*,8*" Background="Gray" ShowGridLines="True">
			<Button Content="this where the options will be" Grid.Row="0" Margin="16"/>
			<Button Content="this where the files will be" Grid.Row="1" Margin="16"/>
			
		</Grid>
	</Grid>

</Window>
